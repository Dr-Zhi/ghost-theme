<div class="post-list">

<div id="push">

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		{{#if image}}
		<figure class="post-image">
			<a href="{{url}}"><img src="{{image}}" alt="" /></a>
		</figure>
		{{/if}}
		<span class="post-meta">
			<span class="post-date">{{date format="DD MMM YYYY"}}</span>
		</span>
		<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
		<section class="post-content">
			{{content}}
		</section>
	</div>
</article>

{{/foreach}}

</div>

</div>

{{pagination}}